<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="decoratedText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/decoratedText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingLeft">@dimen/text_margin</item>
    </style>
    <style name="decoratedTextWithColor" parent="decoratedText">
        <item name="android:background">@color/mainTabInactive</item>
    </style>
    <style name="detailsItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
